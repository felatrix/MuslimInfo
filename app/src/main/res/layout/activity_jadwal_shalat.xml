<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16px"
    tools:context=".JadwalShalat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokasi,Tempat"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_lokasi_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shubuh"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_shubuh_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shurooq"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_shurooq_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dzuhur"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_dzuhur_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ashar"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ashar_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maghrib"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_maghrib_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Isya"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_isya_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value" />
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/tab_refresh"
        android:src="@drawable/ic_refresh_white_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>